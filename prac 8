// Practical No. 8
// Write a program read the temperature sensor and send the values to the serial monitor on the computer.

float temp;
int tempPin = 0; // Assuming the temperature sensor is connected to Analog Pin A0

void setup() {
  Serial.begin(9600);
}

void loop() {
  // read analog volt from sensor and save to variable temp
  temp = analogRead(tempPin); 
  
  // convert the analog volt to its temperature equivalent
  // This conversion factor (0.48828125) is typical for an LM35 on a 5V Arduino, 
  // where (5000 mV / 1024 steps) * (1 degree C / 10 mV) = 0.48828125
  temp = temp * 0.48828125; 
  
  Serial.print("TEMPERATURE = ");
  Serial.print(temp); // display temperature value
  Serial.print("*C");
  Serial.println();
  
  // update sensor reading each one second
  delay(1000); 
}
