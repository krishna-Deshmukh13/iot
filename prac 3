/*
 * Write an application to read temperature from the environment. 
 * If temperature crosses threshold value then it notifies with buzzer.
 */



float temp;
float voltage;
float tempc = 0;
float tempf = 0;
int buzzer = 7;
void setup()
{
  pinMode(A0, INPUT);
  pinMode(buzzer, OUTPUT);
  Serial.begin(9600);
}

void loop()
{
  temp = analogRead(A0);
  voltage = ((temp *5)/1024);
  tempc = (voltage - 0.5) * 100;
  tempf = (tempc *9 / 5) + 32;
  Serial.println("Temprature: ");
  Serial.println(tempc);
  Serial.println(tempf);
  
  if(tempc > 23){
    tone(7,1000);
  }
  else {
    noTone(7);
  }
  delay(200);
  
}
tone() :
use to produce sound wave of specific frequency use with pin 3 and 11 on all arduino 

noTone() :
stop the sound wave prouced by the the tone()
